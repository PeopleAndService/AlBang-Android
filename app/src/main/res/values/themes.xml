<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlBang" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBackground</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorError">@color/colorError</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textAppearance">@style/text.body</item>
    </style>

    <style name="SplashTheme" parent="Theme.AlBang">
        <item name="android:windowBackground">@drawable/layer_splash</item>
    </style>
</resources>
